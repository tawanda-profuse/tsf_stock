<div class="form-row">
  <div class="form-item">
    <label>Product</label>
    <input type="text" name="title" value="<%= item.title %>">
  </div>
  <div class="form-item">
    <label>Author</label>
    <select name="author">
      <% authors.forEach(author => { %>
        <% if (author.id === item.author) { %>
          <option selected label="<%= author.name %>" value="<%= author.id %>">
        <% } else { %>
          <option label="<%= author.name %>" value="<%= author.id %>">
        <% } %>
      <% }) %>
    </select>
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Date Entered</label>
    <input type="date" name="publishDate"
          value="<%= item.publishDate == null ? '' : item.publishDate.toISOString().split('T')[0] %>">
  </div>
  <div class="form-item">
    <label>Quantity</label>
    <input type="number" name="pageCount" min="1" value="<%= item.pageCount %>">
  </div>
</div>

<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label>Product Image</label>
    <input type="file" name="cover" class="item-cover filepond">
  </div>
  <div class="form-item">
    <label>Details</label>
    <textarea name="description"><%= item.description %></textarea>
  </div>
</div>